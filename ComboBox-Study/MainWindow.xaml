<Window x:Class="ComboBox_Study.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComboBox_Study"
        mc:Ignorable="d"
        Title="Cadastro de Clientes" 
        Height="450" 
        Width="800"
        x:Name="clientWindow">
    
    <Grid>
        <!-- Name -->
        <Label
            HorizontalAlignment="Left"
            Margin="28,120,0,0"
            VerticalAlignment="Top"
            Content="Nome"/>

        <ComboBox 
            x:Name="nameComboBox"
            HorizontalAlignment="Left"
            Margin="28,149,0,0"
            VerticalAlignment="Top"
            Width="120"
            ItemsSource="{Binding ElementName=clientWindow, Path=Clients}"
            DisplayMemberPath="Name"
            Text=""/>

        <!-- LastName -->
        <Label
            HorizontalAlignment="Left"
            Margin="201,120,0,0"
            VerticalAlignment="Top"
            Content="Sobrenome"/>
        
        <TextBox
            x:Name="lastNameTextBox"
            HorizontalAlignment="Left"
            Height="23"
            Margin="201,149,0,0"
            VerticalAlignment="Top"
            Width="120"
            Text="{Binding ElementName=nameComboBox, Path=SelectedValue.LastName}"/>

        <!-- Phone -->
        <Label
            HorizontalAlignment="Left"
            Margin="374,120,0,0"
            VerticalAlignment="Top"
            Content="Telefone"/>

        <TextBox
        x:Name="phoneTextBox"
        HorizontalAlignment="Left"
        Height="23"
        Margin="374,149,0,0"
        VerticalAlignment="Top"
        Width="120"
        Text="{Binding ElementName=nameComboBox, Path=SelectedValue.Phone}"/>
    </Grid>
</Window>
