<Window x:Class="Learning_WPF.View.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF.View"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="ModalWindow" Height="150" Width="250">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox Name="inputTextBox" Width="200" Height="40" Margin="5"
                     TextChanged="inputTextBox_TextChanged"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="okButton" Content="OK" 
                        Width="50" Height="40" Margin="2"
                        Click="okButton_Click" IsEnabled="False"/>
                <Button Name="cancelButton" Content="Cancel" 
                        Width="100" Height="40"
                        Click="cancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
