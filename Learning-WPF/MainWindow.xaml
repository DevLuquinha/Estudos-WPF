<Window x:Class="Learning_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>

        <StackPanel Background="LightBlue">
            <TextBlock Text="Name" FontSize="16" />
            <Expander Header="More details">
                <TextBlock Text="Description" FontSize="16" />
            </Expander>
            <Button Name="detailsButton" Width="100" Height="25" 
                    Content="Details" Click="detailsButton_Click"
                    HorizontalAlignment="Left"/>
        </StackPanel>
        <Expander Name="detailsExpander" Background="DarkGray" BorderThickness="0" 
                  Grid.Column="1" ExpandDirection="Left">
            <Rectangle Grid.Column="1" Fill="DarkGray" Width="125"/>
        </Expander>
    </Grid>
</Window>
