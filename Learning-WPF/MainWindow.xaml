<Window x:Class="Learning_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learning_WPF"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox Name="entryTextBox" Height="35" FontSize="16"/>

        <Button Grid.Column="1" Name="addButton" Width="50" 
                Content="Add" Click="addButton_Click" 
                HorizontalAlignment="Left"/>

        <Button Grid.Column="1" Name="deleteButton" Width="50" 
                Content="Del" Click="deleteButton_Click" 
                HorizontalAlignment="Left" Margin="60,0,0,0"/>

        <Button Grid.Column="1" Name="clearButton" Width="50" 
                Content="Clr" Click="clearButton_Click" 
                HorizontalAlignment="Left" Margin="120,0,0,0"/>

        <ListView Name="entriesListView" Grid.Row="1" Grid.ColumnSpan="2" ItemsSource="{Binding Entries}" SelectedItem="{Binding SelectedItem}"/>
    </Grid>
</Window>
